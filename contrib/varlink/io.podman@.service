[Unit]
Description=Podman Remote API Service
Requires=io.podman@%i.socket
After=io.podman@%i.socket
Documentation=man:podman-varlink(1)

[Service]
Type=simple
ExecStart=/usr/bin/podman varlink unix:%t/podman/io.podman-%i --timeout=60000
TimeoutStopSec=30
KillMode=process

[Install]
WantedBy=multi-user.target
Also=io.podman@%i.socket
